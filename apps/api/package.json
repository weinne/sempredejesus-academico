{
  "name": "@seminario/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"ts-node src/server.ts\"",
    "start": "node dist/server.js",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/tests/unit",
    "test:ci": "vitest --run --coverage",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration --config ./vitest.integration.config.ts",
    "test:all": "vitest",
    "test:performance": "artillery run src/tests/performance/load-test.yml",
    "test:security": "npm run test:security:basic",
    "test:security:basic": "npm audit --audit-level moderate",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit generate:pg && drizzle-kit migrate:pg",
    "db:seed": "ts-node src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "seed:users": "ts-node src/scripts/seed-mock-users.ts"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.1",
    "@seminario/shared-auth": "workspace:*",
    "@seminario/shared-config": "workspace:*",
    "@seminario/shared-dtos": "workspace:*",
    "@types/cookie-parser": "^1.4.9",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.28.5",
    "express": "^5.0.0-beta.1",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "postgres": "^3.3.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.21.4",
    "zod-to-openapi": "^0.2.1"
  },
  "devDependencies": {
    "@seminario/shared-tests": "workspace:*",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^0.34.1",
    "artillery": "^2.0.0",
    "drizzle-kit": "^0.19.12",
    "eslint": "^8.46.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}